<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/googlemaps"
                    android:padding="@dimen/size10"
                    android:layout_height="@dimen/size120" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Name"
                    android:textColor="@color/colorGray"
                    android:padding="@dimen/size8"
                    android:textSize="@dimen/size_text_18"
                    android:layout_marginLeft="@dimen/size8"
                    android:layout_marginRight="@dimen/size8"
                    android:layout_marginTop="@dimen/size30"
                    android:layout_marginBottom="@dimen/size16"
                    android:background="@drawable/bg_gray_2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:textColor="@color/colorGray"
                    android:padding="@dimen/size8"
                    android:textSize="@dimen/size_text_18"
                    android:layout_margin="@dimen/size8"
                    android:background="@drawable/bg_gray_2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:textColor="@color/colorGreen"
                    android:padding="@dimen/size8"
                    android:textSize="@dimen/size_text_18"
                    android:layout_margin="@dimen/size8"
                    android:background="@drawable/bg_gray_2"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Config password"
                    android:textColor="@color/colorGreen"
                    android:padding="@dimen/size8"
                    android:textSize="@dimen/size_text_18"
                    android:layout_margin="@dimen/size8"
                    android:background="@drawable/bg_gray_2"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="@dimen/size250"
                    android:text="Create Account"
                    android:layout_gravity="center"
                    android:background="@drawable/button_bg_green"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/size20"
                    android:textAllCaps="false"
                    android:textSize="@dimen/size_text_22"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Already a member login ?"
                    android:layout_marginRight="@dimen/size8"
                    android:layout_marginTop="@dimen/size16"
                    android:layout_gravity="right"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/size_text_14"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>