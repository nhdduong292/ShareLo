<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size180"
        android:padding="@dimen/size10"
        android:src="@drawable/googlemaps" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size16"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginTop="@dimen/size30"
        android:background="@drawable/bg_gray_2"
        android:hint="User"
        android:padding="@dimen/size8"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/size_text_18" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8"
        android:background="@drawable/bg_gray_2"
        android:hint="Password"
        android:padding="@dimen/size8"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/size_text_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8"
        android:gravity="center|left">

        <ImageView
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size20"
            android:layout_marginRight="@dimen/size8"
            android:background="@drawable/bg_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember"
            android:textSize="@dimen/size_text_14" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/size250"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_green"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_text_22" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size16"
        android:text="Dang Ky"
        android:id="@+id/tv_register"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/size_text_14" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/size16"
        android:text="Forgot your password ?"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/size_text_14" />

</LinearLayout>