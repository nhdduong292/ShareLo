<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorRed"
                android:width="@dimen/size1"></stroke>
            <solid android:color="@color/colorGray"></solid>
            <corners android:radius="@dimen/size5"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorWhite"></solid>
            <stroke android:color="@color/colorGray"
                android:width="@dimen/size1"></stroke>
            <corners android:radius="@dimen/size5"></corners>
        </shape>
    </item>
</selector>